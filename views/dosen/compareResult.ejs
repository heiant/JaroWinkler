<!-- tampilan untuk melihat hasil perbandingan tugas -->
<%- include('../layouts/dosenheader.ejs') %>
<div
  class="flex justify-content-between flex-md nowrap align-items-center pt-3 pb-2 mb-3"
>
  <h2 class="border-bottom mb-4">Hasil Perbandingan Tugas</h2>
  <ul class="list-group">
    <h4>Tugas Saat Ini</h4>
    <li class="list-group-item">
      <div class="row">
        <div class="col" style="max-width: 140px"><b>Judul :</b></div>
        <div class="col"><%= tugas1.judul %></div>
      </div>
    </li>
    <li class="list-group-item">
      <div class="row">
        <div class="col" style="max-width: 140px"><b>Nama :</b></div>
        <div class="col"><%= tugas1.mahasiswa %></div>
      </div>
    </li>
    <li class="list-group-item">
      <div class="row">
        <div class="col" style="max-width: 140px"><b>Tugas :</b></div>
        <a href="/<%= tugas1.tugas %>">
          <button class="btn btn-outline-primary mt-3 mb-3" target="_blank">
            Lihat File
          </button>
        </a>
      </div>
    </li>
  </ul>
  <ul class="list-group mt-5">
    <h4>Tugas yang Dibandingkan</h4>
    <li class="list-group-item">
      <div class="row">
        <div class="col" style="max-width: 140px"><b>Judul :</b></div>
        <div class="col"><%= tugas2.judul %></div>
      </div>
    </li>
    <li class="list-group-item">
      <div class="row">
        <div class="col" style="max-width: 140px"><b>Nama :</b></div>
        <div class="col"><%= tugas2.mahasiswa %></div>
      </div>
    </li>
    <li class="list-group-item">
      <div class="row">
        <div class="col" style="max-width: 140px"><b>Tugas :</b></div>
        <a href="/<%= tugas2.tugas %>">
          <button class="btn btn-outline-primary mt-3 mb-3" target="_blank">
            Lihat File
          </button>
        </a>
      </div>
    </li>
  </ul>
  <h4 class="mt-3">Hasil Perbandingan</h4>
  <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 200px"><b>Tingkat Kemiripan :</b></div>
      <% if (similarity > 80) { %>
      <div class="col" style="color: red"><b><%= similarity %>%</b></div>
      <% } else if (similarity > 50) { %>
      <div class="col" style="color: orange"><b><%= similarity %>%</b></div>
      <% } else { %>
      <div class="col" style="color: green"><b><%= similarity %>%</b></div>
      <% } %>
    </div>
  </li>
</div>

<%- include('../layouts/dosenfooter.ejs') %>
